<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
    <bean id="manager" class="edu.mcw.rgd.dataload.omim.Manager">
        <property name="version" value="OmimPipeline v.1.4.7, Jan 21, 2019"/>
    </bean>

    <bean id="omimLoader" class="edu.mcw.rgd.dataload.omim.OmimLoader">
        <property name="version" value="OmimIdPipeline v.1.4.1, Oct 2, 2017"/>
        <property name="preProcessor" ref="preProcessor"/>
        <property name="qcProcessor" ref="qcProcessor"/>
        <property name="loadProcessor" ref="loadProcessor"/>
    </bean>

    <!-- in Feb 2016, reregistration was needed, and download links changed -->
	<bean id="preProcessor" class="edu.mcw.rgd.dataload.omim.PreProcessor">
        <property name="mim2geneFile" value="http://omim.org/static/omim/data/mim2gene.txt"/>
        <property name="morbidmapFile" value="http://data.omim.org/downloads/3XqIoOKuTw6AchXT56nFYQ/morbidmap.txt"/>
        <property name="genemapFile" value="http://data.omim.org/downloads/3XqIoOKuTw6AchXT56nFYQ/genemap.txt"/>
        <property name="genemapKeyFile" value="http://data.omim.org/downloads/3XqIoOKuTw6AchXT56nFYQ/genemap2.txt"/>
        <property name="omimTxtFile" value="http://data.omim.org/downloads/3XqIoOKuTw6AchXT56nFYQ/mimTitles.txt"/>
	</bean>

    <bean id="qcProcessor" class="edu.mcw.rgd.dataload.omim.QCProcessor">
    </bean>

    <bean id="loadProcessor" class="edu.mcw.rgd.dataload.omim.LoadProcessor">
    </bean>

    <bean id="annotationLoader" class="edu.mcw.rgd.dataload.omim.AnnotationLoader">
        <property name="version" value="OmimAnnotationPipeline v. 1.0.7, Dec 19, 2018"/>
        <property name="createdBy" value="192"/>
        <property name="refRgdId" value="7240710"/>
        <property name="dataSource" value="OMIM"/>
        <property name="deleteThresholdForStaleAnnotations" value="5%"/>
    </bean>
</beans>
